{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "tests/generators/ArticleGenerator.test.ts",
    "tests/parsers/ArticleSectionParser.test.ts",
    "src/parsers/ArticleSectionParser.ts",
    "tests/prompts/getFactCheckPromptMessage.test.ts",
    "tests/utils/file.test.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
